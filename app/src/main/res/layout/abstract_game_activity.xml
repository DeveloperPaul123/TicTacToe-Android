<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <com.developerpaul123.tictactoe.views.TicTacToeView
        android:id="@+id/tic_tac_toe_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/material_fab"
        android:layout_alignEnd="@+id/material_fab" />

    <com.devpaul.materiallibrary.views.MaterialFloatingActionButton
        android:id="@+id/material_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mat_fab_icon="@drawable/ic_action_av_replay"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>